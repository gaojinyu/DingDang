<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/sino_login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="87dp"
        android:layout_marginTop="98dp"
        android:text="@string/sino_login_btn" />

    <TextView
        android:id="@+id/qq_login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sino_login_btn"
        android:layout_below="@+id/sino_login_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="22dp"
        android:text="@string/qq_login_btn" />

    <EditText
        android:id="@+id/login_user_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sino_login_btn"
        android:layout_below="@+id/qq_login_btn"
        android:layout_marginTop="22dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/login_psw_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login_user_edit"
        android:layout_below="@+id/login_user_edit"
        android:layout_marginTop="38dp"
        android:ems="10" />

    <Button
        android:id="@+id/dd_login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login_psw_edit"
        android:layout_below="@+id/login_psw_edit"
        android:layout_marginTop="40dp"
        android:text="@string/dd_login_btn" />

</RelativeLayout>
